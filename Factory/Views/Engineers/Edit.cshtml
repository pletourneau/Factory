@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;

<h1>Edit Engineer</h1>
<hr/>

<div class="container">
  <h3>Edit this Engineer's details: @Html.DisplayFor(model => model.MachineName)</h3>

  <br/>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.EngineerId)

    @Html.LabelFor(model => model.Name)
    <br/>
    @Html.EditorFor(model => model.Name)
    <br/>
    <br/>
    <input type="submit" value="Save" class="btn btn-success" />
  }
</div>

<br>

<div class="container">
  <h5>@Html.ActionLink("Back to Engineers", "Details", new { id = Model.EngineerId })</h5>
</div>